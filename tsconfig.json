{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true, //SET TO FALSE THIS WHEN NO .js in ./src/**
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "charset": "utf-8",
    "declaration": false, //SET TO TRUE THIS WHEN NO .js in ./src/**
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.d.ts",
    "./node_modules/"
  ]
}
